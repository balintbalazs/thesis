x = 0:0.01:pi/2;
n = 1.33;
NA = n*sin(x);
eff = (1-cos(x))/2;
a = x * 180 / pi;
%%
figureSize = 500;
lineWidth = 1.5;
%%
f7 = figure(7)
cla reset;
pos = get(f7, 'Position');
set(f7, 'Position', [pos(1), pos(2), figureSize, figureSize])
hold on
axis square
set(gcf, 'Color', 'w')

plot(NA, eff, 'LineWidth', lineWidth)
h = gca;
h.GridColor = [1,0,0];
h.GridAlpha
grid on
set(h, 'LineWidth', 2)
set(h, 'Box', 'on', 'Color', repmat(1,[1,3]), 'FontSize', 12)
